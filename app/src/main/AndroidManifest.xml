<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android_DevOps_Project_8">
        <activity
            android:name=".Main"
            android:label="메인 페이지"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MP3Player"
            android:label="MP3플레이어"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SelectMusicPage"
            android:label="노래 선택 페이지"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".GamePage"
            android:label="게임 페이지"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".EndPage"
            android:label="엔드 페이지"
            android:screenOrientation="landscape" >
        </activity>

    </application>

</manifest>