<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 배경 컨테이너 (RelativeLayout 배경화면) -->
    <RelativeLayout
        android:id="@+id/bg_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:background="#F4F6F8">

        <!-- 실제 UI 배치용 RelativeLayout -->
        <RelativeLayout
            android:id="@+id/ui_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:background="#FFFFFF">

            <!-- 오른쪽 상세 패널(이미지뷰/보더 느낌의 카드) -->
            <LinearLayout
                android:id="@+id/detail_card"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                android:padding="14dp"
                android:background="@drawable/box_border">

                <!-- 상단 정보: 곡 이름 / 점수 등급 (LinearLayout) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="곡 이름"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/tv_rank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="점수 등급"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- 점수(TextView) -->
                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="점수: 0,000"
                    android:textSize="16sp"
                    android:padding="8dp" />

                <!-- 난이도 선택 (RadioGroup 가로) -->
                <RadioGroup
                    android:id="@+id/rg_difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_easy"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="난이도\n(Easy)"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/radio_difficulty_bg"
                        android:button="@android:color/transparent"
                        android:padding="6dp" />

                    <RadioButton
                        android:id="@+id/rb_normal"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="난이도\n(Normal)"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/radio_difficulty_bg"
                        android:button="@android:color/transparent"
                        android:layout_marginStart="8dp"
                        android:padding="6dp" />

                    <RadioButton
                        android:id="@+id/rb_hard"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="난이도\n(Hard)"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/radio_difficulty_bg"
                        android:button="@android:color/transparent"
                        android:layout_marginStart="8dp"
                        android:padding="6dp" />
                </RadioGroup>
            </LinearLayout>

            <!-- 왼쪽: 스크롤 가능한 곡 선택 영역 -->
            <ScrollView
                android:id="@+id/song_list_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/detail_card"
                android:layout_marginEnd="12dp">

                <RadioGroup
                    android:id="@+id/rg_song_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <!-- 각 항목: RadioButton + 보더 -->
                    <RadioButton
                        android:id="@+id/rb_song_1"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="곡 이름 1"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:background="@drawable/radio_choice_bg"
                        android:button="@android:color/transparent"
                        android:layout_marginBottom="10dp"/>

                    <RadioButton
                        android:id="@+id/rb_song_2"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="곡 이름 2"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:background="@drawable/radio_choice_bg"
                        android:button="@android:color/transparent"
                        android:layout_marginBottom="10dp"/>

                    <RadioButton
                        android:id="@+id/rb_song_3"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="곡 이름 3"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:background="@drawable/radio_choice_bg"
                        android:button="@android:color/transparent"
                        android:layout_marginBottom="10dp"/>

                    <!-- 필요 시 항목을 계속 추가 -->
                </RadioGroup>
            </ScrollView>

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>